{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2020",

        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,

        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "esm",
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/types/*"
            ]
        },
        "lib": [
          "DOM",
          "ES2020"
        ],
        "declaration": true
    },
    "include": [
        "**/*.ts"
    ]
}
